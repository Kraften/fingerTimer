<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#0277bd"
                android:endColor="#0277bd"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#9e9e9e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#ffa726"
                android:startColor="#ffb74d"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#9e9e9e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#03a9f4"
                android:startColor="#039be5"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#9e9e9e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>